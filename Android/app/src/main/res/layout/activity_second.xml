<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Para quem vocÃª deseja enviar"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/pixValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@id/titleTextView"
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/pixKeyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a chave pix"
        android:inputType="text"
        android:layout_below="@id/pixValueTextView"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/continueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:layout_below="@id/pixKeyEditText"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
